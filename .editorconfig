# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files (README.md)
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# Python files
[*.py]
indent_style = space
indent_size = 4
# PEP 8 - Python Enhancement Proposal 8
max_line_length = 120
end_of_line = lf
insert_final_newline = true
